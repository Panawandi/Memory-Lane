@using ML.Models
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<UserApp> SignInManager;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Memory Lane</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MemoryLane.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/among_us.ico" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if(User?.Identity?.IsAuthenticated ?? false){
                    <a class="navbar-brand">Memory Lane</a>    
                } else {
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Introduction">Memory Lane</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (User?.Identity?.IsAuthenticated ?? false){
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Leauge" asp-action="Leauge">Leauge</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Apex" asp-action="Apex">Apex</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Fortnite" asp-action="Fortnite">Fortnite</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AmongUs" asp-action="AmongUs">Among Us</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text">Hello, @User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link ml-auto" asp-area="" asp-controller="User" asp-action="Account">Account</a>
                            </li>

                            <li class="nav-item">
                                <form asp-area="" asp-controller="User" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link ml-auto">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link ml-auto" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                    </ul>


                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MemoryLane - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
